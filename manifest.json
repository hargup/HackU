{
  "manifest_version": 2,

  "name": "Text_Vim",
  "description": "This extension demonstrates a browser action with vim.",
  "version": "1.0",

  "permissions": ["tabs", "http://*/*", "background"
  ],
  "content_scripts":[
  {
	  "matches":["http://*/*"],
	  "js":["script.js"],
	  "all_frames":true,
	  "run_at":"document_start"
  }],
  "page_action":{
	"default_icon": "icon.png",
       "default_popup": "popup.html"	
	},
}
